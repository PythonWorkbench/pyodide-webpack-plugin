{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,

    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declarationDir": "./dist/types/umd"
  },
  "files": ["./index.ts", "./loader.ts"],
  "include": ["./lib/**/*.ts"],
  "exclude": ["node_modules"]
}
